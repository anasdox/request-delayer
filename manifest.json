{
    "manifest_version": 2,
    "name": "Request Delayer",
    "version": "1.0",
    "description": "Delays specific requests based on regex rules.",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "48": "icon.png"
        },
        "default_title": "Request Delayer"
    },
    "icons": {
        "48": "icon.png"
    }
}